<Window x:Class="Task3.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow">

        <Viewbox Stretch="Uniform">
                <Grid>
                        <ItemsControl x:Name="GameFieldViewModel" ItemsSource="{Binding Path=Cells}">
                                <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate >
                                                <UniformGrid Rows="{Binding Path=Rows}" Columns="{Binding Path=Columns}"/>
                                        </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                                <Button
                                                        Height="50"
                                                        Width="50"
                                                        Content="{Binding Path=Value}"
                                                        IsEnabled="{Binding Path=CanSelect}"
                                                        Command="{Binding ClickOnCell}">
                                                        <Button.InputBindings>
                                                                <MouseBinding Gesture="RightClick" Command="{Binding RightClickOnCell}"/>
                                                        </Button.InputBindings>
                                                </Button>
                                        </DataTemplate>
                                </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </Grid>
        </Viewbox>
</Window>